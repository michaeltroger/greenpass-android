<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/privacy_policy">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/privacy_policy_uri"/>
    </Preference>
    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/report_issue"
        android:summary="@string/report_issue_summary">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/issues_uri"/>
    </Preference>
    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/rate"
        android:summary="@string/rate_summary">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/rate_uri"/>
    </Preference>
    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/help_translating"
        android:summary="@string/help_translating_summary">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/help_translating_uri"/>
    </Preference>
    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/contributing"
        android:summary="@string/contributing_summary">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/contributing_uri"/>
    </Preference>
    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/licenses"
        android:summary="@string/licenses_summary">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/licenses_uri"/>
    </Preference>
    <Preference
        app:layout="@layout/preference_layout_with_icon"
        android:title="@string/changelog"
        android:summary="@string/changelog_summary">
        <intent android:action="android.intent.action.VIEW"
            android:data="@string/changelog_uri"/>
    </Preference>
    <Preference
        app:iconSpaceReserved="false"
        android:key="@string/key_preference_version">
    </Preference>

</PreferenceScreen>
