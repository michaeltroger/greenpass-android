<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/certificateFragment"
        android:name="com.michaeltroger.gruenerpass.certificate.CertificateFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_certificate">

        <action
            android:id="@+id/navigate_to_more"
            app:destination="@id/moreFragment" />
        <action
            android:id="@+id/navigate_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/navigate_to_lock"
            app:destination="@id/lockFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.michaeltroger.gruenerpass.start.StartFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/navigate_to_certificate"
            app:destination="@id/certificateFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/navigate_to_lock"
            app:destination="@id/lockFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/lockFragment"
        android:name="com.michaeltroger.gruenerpass.lock.LockFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/navigate_to_certificate"
            app:destination="@id/certificateFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.michaeltroger.gruenerpass.more.MoreFragment"
        android:label="@string/more">
        <action
            android:id="@+id/navigate_to_lock"
            app:destination="@id/lockFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.michaeltroger.gruenerpass.settings.SettingsFragment"
        android:label="@string/settings">
        <action
            android:id="@+id/navigate_to_lock"
            app:destination="@id/lockFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
